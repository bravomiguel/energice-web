datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id               String    @id @default(cuid())
  email            String    @unique
  hashedPassword   String
  eConfCode        String?
  eConfCodeAt      DateTime?
  isEmailConfirmed Boolean   @default(false)
  firstName        String?
  lastName         String?
  dob              DateTime?
  isWaiverSigned   Boolean   @default(false)
  waiverSignedAt   DateTime?
  waiverSigName    String?
  healthQuiz       String?
  authCallbackUrl  String?
  hasFreeCredit    Boolean   @default(true)
  sessions         Session[]
  pwResetCode      String?
  pwResetCodeAt    DateTime?
  deleted          Boolean   @default(false)
  deletedAt        DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}

model Session {
  id               String    @id @default(cuid())
  hasPaid          Boolean   @default(false)
  hasUsedCredit    Boolean   @default(false)
  amountSubtotal   Int?
  amountTotal      Int?
  accessCodeId     String?
  accessCode       String?
  accessCodeEndsAt DateTime?
  plungeTimerSecs  Int
  sessionStart     DateTime?
  sessionEnd       DateTime?
  isLidLeftOpen    Boolean   @default(false)
  totalPlungeSecs  Int?
  User             User      @relation(fields: [userId], references: [id])
  userId           String
  Unit             Unit      @relation(fields: [unitId], references: [id])
  unitId           String
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}

model Unit {
  id               String    @id @default(cuid())
  imageUrl         String
  hostName         String
  hostAddress      String
  hostGMapsPlaceId String
  lockDeviceId     String
  sessions         Session[]
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}
