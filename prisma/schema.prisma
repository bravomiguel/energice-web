// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(cuid())
  email          String    @unique
  hashedPassword String
  firstName      String?
  lastName       String?
  dob            DateTime?
  isWaiverSigned Boolean   @default(false)
  healthQuiz     String?
  sessions       Session[]
  deleted        Boolean   @default(false)
  deletedAt      DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Session {
  id                String   @id @default(cuid())
  sessionInProgress Boolean  @default(false)
  sessionStart      DateTime
  sessionEnd        DateTime
  sessionTime       Int
  penaltyCharged    Boolean  @default(false)
  plungeStart       DateTime
  plungeEnd         DateTime
  plungePaused      Boolean  @default(false)
  plungePauseTime   Int?
  plungeTime        Int
  User              User     @relation(fields: [userId], references: [id])
  userId            String
  Unit              Unit     @relation(fields: [unitId], references: [id])
  unitId            String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Unit {
  id           String    @id @default(cuid())
  gym          String
  lockDeviceId String
  sessions     Session[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}
